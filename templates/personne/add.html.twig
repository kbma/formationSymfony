{% extends 'template.html.twig' %}

{% block titre %}Ajouter une personne
{% endblock %}

{% block body %}
	{{form_start(form,{'attr': {'novalidate': 'novalidate'}})}}

	<div class="row">
		<div class="col">
			{{ form_row(form.firstName) }}
		</div>
		<div class="col">
			{{ form_row(form.name) }}
		</div>
	</div>
	<div class="row">
		<div class="col">
			{{ form_row(form.job) }}
		</div>
		<div class="col">
			{{ form_row(form.profile) }}
		</div>
		<div class="col">
			{{ form_row(form.age) }}
		</div>
	</div>
	{{ form_rest(form) }}
{% endblock %}
